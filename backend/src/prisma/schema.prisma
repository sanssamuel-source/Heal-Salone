generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      UserRole @default(USER)
  createdAt DateTime @default(now())
  
  reports   HealthReport[]
  chatLogs  ChatLog[]
}

enum UserRole {
  USER
  ADMIN
}

model HealthReport {
  id          String   @id @default(cuid())
  userId      String
  symptoms    String
  mood        String?
  photoUrl    String?
  createdAt   DateTime @default(now())

  user        User     @relation(fields: [userId], references: [id])
}

model ChatLog {
  id        String   @id @default(cuid())
  userId    String
  message   String
  reply     String?
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])
}
